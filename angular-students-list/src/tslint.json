{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "no-unused-expression": [
            true, 
            "allow-fast-null-checks"
        ],
        "max-line-length": [
            true, 
            140
        ]
    }
}
